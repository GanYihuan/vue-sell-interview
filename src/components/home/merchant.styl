.title
  margin: .2rem 0 0 0
  line-height: .8rem
  text-indent: .2rem
  background: #eee
.list-content
  overflow: hidden
  padding-bottom: 1rem
.list-title
  margin-top: 1rem
  margin-bottom: 1rem
  text-align: center;
  font-size: 1rem
  .title-line
    display: inline-block
    border-bottom: .1rem solid #949494
    margin-left: .4rem
    margin-right: .4rem
    margin-bottom: .2rem
    width: 2rem
    height: .1rem
.item
  display: flex
  height: 1.9rem
  overflow: hidden
  .item-img
    padding: .1rem
    width: 1.7rem
    height: 1.7rem
  .item-info
    flex: 1
    padding: .1rem
    min-width: 0
    .item-title
      line-height: .54rem
      font-size: .32rem
      overflow: hidden
      white-space: nowrap
      text-overflow: ellipsis
    .item-desc
      line-height: .4rem
      color: #ccc
      overflow: hidden
      white-space: nowrap
      text-overflow: ellipsis
    .item-button
      margin: .16rem 0 0 0
      padding: 0 .2rem
      border-radius: .06rem
      line-height: .44rem
      color: #fff
      background: #ff9300
