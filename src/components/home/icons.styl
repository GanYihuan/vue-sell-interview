$bgColor = #00bcd4
$darkTextColor = #333
$headerHeight = .86rem

ellipsis()
  overflow: hidden
  white-space: nowrap
  text-overflow: ellipsis

.icons >>> .swiper-container
  padding-bottom: 50%
  height: 0
  overflow: hidden
.icons
  margin-top: .1rem
  .icon
    float: left
    // <固定宽高比
    position: relative
    width: 25%
    height: 0
    padding-bottom: 25%
    overflow: hidden
    // >
    .icon-img
      // <相当于 width: 100%
      position: absolute
      left: 0
      right: 0
      // >
      top: 0
      height: 70px;
      .icon-img-content
        display: block
        margin: 0 auto // block 居中
        height: 100%
    .icon-desc
      position: absolute
      left: 0
      right: 0
      bottom: 14px
      text-align: center
      color: $darkTextColor
      ellipsis()
