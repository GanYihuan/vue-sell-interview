@import '../../assets/stylus/mixin.styl'
@import '../../assets/stylus/variable.styl'
.header
  border-bottom: .0625rem solid #b2b2b2
  width: 100%
  height: 4rem
  line-height: 4rem
  text-align: center
  font-size: 1.0625rem
  font-weight: bold
  background-color: #fff
  a
    color: #333
.icon-arrow_lift
  position relative
  left -10rem
.evalutate
  height: 100%
  .eva-content
    border-top: .8125rem solid #efefef
    overflow: hidden
    background-color: #fff
  .star-area
    margin-top:1.875rem
    text-align: center
  .star-item
    display: inline-block
    margin-right:.625rem
    width:2rem
    height:2rem
    background-size: cover
    background-image: url('./img/gray-star.png');
    &.highlight
      background-image: url('./img/light-star.png');
  .comment
    position: relative
    margin-top:1.25rem
    margin-left:.625rem
    margin-right:.625rem
    padding-bottom:.8125rem
    border-bottom: .0625rem solid #e4e4e4
    .count
      position: absolute
      bottom:1.5rem
      right:.5625rem
      font-size:.6875rem
      color: #aaa
    .comment-input
      box-sizing: border-box
      padding:.625rem
      border-radius: 0
      border: .0625rem solid #c6c6c6
      width: 100%
      height:6.25rem
      font-size:1rem
      background-color: #fafafa
      outline: none
      -webkit-appearance: none
  .product-name
    padding-top:1.25rem
    padding-bottom:1.25rem
    padding-left:1.25rem
    text-align: left
    font-size:1rem
.submit
  position: fixed
  bottom: 22rem
  width: 100%
  height: 3.125rem
  line-height: 3.125rem
  text-align: center
  font-size: 1rem
  color: #333
  background-color: #ffd161