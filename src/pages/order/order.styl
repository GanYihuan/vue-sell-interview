@import '../../assets/stylus/mixin.styl'
@import '../../assets/stylus/variable.styl'
.order
  position: absolute
  left: 0
  top: 4rem
  bottom: 0
  margin 0 0 4rem 0
  width: 100%
  overflow: hidden
.header
  width: 100%
  height: 4rem
  line-height: 4rem
  text-align: center
  font-size: 1rem
  font-weight: bold
  color: $color-black
  background-color: $color-white
.order-item
  .order-item-inner
    display flex
    border-1px($color-gray-s)
    padding-bottom 1.125rem
  .item-img
    margin-top .5rem
    margin-left 1rem
    border-radius 50%
    width 2.5rem
    height 2.5rem
  .item-right
    flex 1
    margin-left .9375rem
  .item-top
    display flex
    align-items center
    border-1px($color-gray-s)
    padding-top .125rem
    height 3.4375rem
  .close
    position relative
    left 7rem
    box-sizing border-box
    width 4rem
    height 100%
    padding 1rem
    .icon-close
      display inline-block
      position relative
      top: 50%
      left: 50%
      transform: translate(-50%, -50%)
  .order-name
    width 11.25rem
    height 1rem
    font-size 1rem
    font-weight 600
  .order-state
    margin-left 2.5rem
    font-size .875rem
    color $color-gray
  .item-bottom
    .product-item
      margin-top .75rem
      font-size .875rem
      color $color-gray
    .p-count
      float right
      margin-right .9375rem
    .p-total-count
      float right
      margin: .625rem .9375rem 0 0
      font-size .75rem
    .total-price
      margin-left .125rem
      font-size .875rem
      color $color-black
      letter-spacing .0625rem
  .evaluation
    position relative
    left 19rem
    padding .625rem
  .evaluation-btn
    margin-right .625rem
    width 6.25rem
    height 2rem
    line-height 2rem
    text-align center
    font-size .875rem
    color $color-black
    background-color $color-yellow
