@import '../../assets/stylus/mixin.styl'
@import '../../assets/stylus/variable.styl'
.header
  border-bottom: .0625rem solid #b2b2b2
  width: 100%
  height: 4rem
  line-height: 4rem
  text-align: center
  font-size: 1.0625rem
  font-weight: bold
  color: #333
  background-color: #fff
.order-item
  border-top: .8125rem solid #efefef
.order-item
  border-top .8125rem solid #efefef
  .order-item-inner
    display flex
    border-bottom .0625rem solid #e0e0e0
    padding-bottom 1.125rem
  .item-img
    margin-top .5rem
    margin-left 1rem
    border-radius 50%
    width 2.5rem
    height 2.5rem
  .item-right
    flex 1
    margin-left .9375rem
  .item-top
    display flex
    align-items center
    border-bottom .0625rem solid #e0e0e0
    padding-top .125rem
    height 3.4375rem
  .order-name
    width 11.25rem
    height 1rem
    font-size 1rem
    font-weight 600
  .arrow
    border-width .0625rem .0625rem 0 0
    border .0625rem solid #999
    width .5rem
    height .5rem
    transform rotate(45deg)
    -webkit-transform 45deg
  .order-state
    margin-left 2.5rem
    font-size .875rem
    color #999
  .item-bottom
    .product-item
      margin-top .75rem
      font-size .875rem
      color #666
    .p-count
      float right
      margin-right .9375rem
    .p-total-count
      float right
      margin: .625rem .9375rem 0 0
      font-size .75rem
    .total-price
      margin-left .125rem
      font-size .875rem
      color #151515
      letter-spacing .0625rem
  .evaluation
    position relative
    left 19rem
    padding .625rem
  .evaluation-btn
    margin-right .625rem
    width 6.25rem
    height 2rem
    line-height 2rem
    text-align center
    font-size .875rem
    color #6b450a
    background-color #ffd161
