.search
  padding: 0 .1rem
  height: .72rem
  background: #00bcd4
  .search-input
    box-sizing: border-box
    padding: 0 .1rem
    border-radius: .06rem
    width: 100%
    height: .62rem
    line-height: .62rem
    text-align: center
    color: #666
.search-content
  z-index: 1
  /* 相当于 width: 100% */
  position: absolute
  left: 0
  right: 0
  /* 相当于 width: 100% */
  top: 1.58rem
  bottom: 0
  background: #eee
  overflow: hidden
  .search-item
    padding-left: .2rem
    line-height: .62rem
    color: #666
    background: #fff
