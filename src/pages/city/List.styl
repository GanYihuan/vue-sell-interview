@import '../../assets/stylus/mixin.styl'
@import '../../assets/stylus/variable.styl'
.list
  position: absolute
  left: 0
  right: 0
  top: 6rem
  bottom: 0
  overflow: hidden
  .title
    padding-left: .2rem
    height: 1.4rem
    line-height: 1.4rem
    font-size: .8rem
    color: #666
    background: #eee
  .button-list
    padding: .4rem 1rem .4rem .4rem
    overflow: hidden // 子级浮动, 父级触发 BLC, 不与 float 重叠
    .button-wrapper
      float: left
      width: 33.33%
      .button
        margin: .2rem
        padding: .2rem 0
        border: .1rem solid #ccc
        border-radius: .2rem
        text-align: center
  .item-list
    .item
      padding-left: .2rem
      line-height: 1.76rem