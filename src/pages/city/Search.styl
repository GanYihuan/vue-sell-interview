@import '../../assets/stylus/mixin.styl'
@import '../../assets/stylus/variable.styl'
.search-wrapper
  position absolute
  left: 0
  right: 0
  top: 3rem
  bottom: 0
.search
  padding: 0 .4rem
  height: 3rem
  line-height 3rem
  background: $color-yellow
  .search-input
    box-sizing: border-box
    padding: 0 .1rem
    border-radius: .2rem
    width: 100%
    height: 2rem
    line-height: 2rem
    text-align: center
    color: $color-gray
.search-content
  z-index: 1
  position: absolute
  left: 0
  right: 0
  top: 3rem
  bottom: 0
  height: 100%
  background: $color-white
  overflow: hidden
  .search-item
    padding-left: .2rem
    height: 2rem
    line-height: 2rem
    color: $color-gray
    background: $color-white
