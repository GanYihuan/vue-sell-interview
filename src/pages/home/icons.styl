ellipsis()
  overflow: hidden
  white-space: nowrap
  text-overflow: ellipsis

.icons >>> .swiper-container
  padding-bottom: 50%
  height: 0
  overflow: hidden
.icons
  margin-top: .1rem
  .icon
    display: flex
    flex-direction: column
    justify-content: space-between
    float: left
    position: relative
    width: 25%
    height: 0
    padding-bottom: 25%
    overflow: hidden
    .icon-img
      box-sizing: border-box
      position: absolute
      left: 0
      right: 0
      height: 4.5rem
      @media screen and (max-width: 400px)
        height: 3rem
      .icon-img-content
        display: block
        margin: 0 auto // block 居中
        height: 100%
    .icon-desc
      position: absolute
      left: 0
      right: 0
      bottom: 1rem
      height: 1rem
      line-height: 1rem
      text-align: center
      font-size: .5rem
      font-weight: 800
      color: #333
      ellipsis()
