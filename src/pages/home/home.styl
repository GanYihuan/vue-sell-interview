@import '../../assets/stylus/mixin.styl'
.home
  z-index: 1
  position: absolute
  left: 0
  right: 0
  top: 0
  bottom: 4rem
  overflow: hidden
.back-to-ceiling
  position: fixed
  display: inline-block
  text-align: center
  cursor: pointer
.back-to-ceiling:hover
  background: #d5dbe7
.fade-enter-active,
.fade-leave-active
  transition: opacity .5s
.fade-enter,
.fade-leave-to
  opacity: 0
.back-to-ceiling .Icon
  fill: #9aaabf
  background: none
.Icon--backToTopArrow
  position: fixed
  right: 1rem
  bottom: 5rem
  height: 2rem
  width: 2rem