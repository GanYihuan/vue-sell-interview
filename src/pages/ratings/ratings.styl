@import '../../assets/stylus/mixin.styl'
@import '../../assets/stylus/variable.styl'
.ratings
  position: absolute
  left: 0
  top: 10.875rem
  bottom: 0
  width: 100%
  overflow: hidden
  .overview
    display: flex
    padding: 1.125rem 0 1.125rem 1.125rem
    .overview-left
      flex: 0 0 8.5625rem
      padding: .375rem 0
      border-right: .0625rem solid $color-gray-s
      width: 8.5625rem
      text-align: center
      @media only screen and (max-width: 20rem)
        flex: 0 0 7.5rem
        width: 7.5rem
      .score
        margin-bottom: .75rem
        line-height: 1.75rem
        font-size: 1.5rem
        color: $color-orange
      .title
        margin-bottom: .5rem
        line-height: .75rem
        font-size: .75rem
        color: $color-black
      .rank
        line-height: .625rem
        font-size: .75rem
        color: $color-gray
    .overview-right
      flex: 1
      padding: .375rem 0 .375rem 1.5rem
      @media only screen and (max-width: 20rem)
        padding-left: .375rem
      .score-wrapper
        margin-top: .5rem
        line-height: 1.125rem
        font-size: 0
        .title
          display: inline-block
          vertical-align: top
          line-height: 1.125rem
          font-size: .75rem
          color: $color-black
        .star
          display: inline-block
          margin: 0 .75rem
          vertical-align: top
        .score
          display: inline-block
          line-height: 1.125rem
          vertical-align: top
          font-size: .75rem
          color: $color-orange
      .delivery-wrapper
        font-size: 0
        .title
          display: inline-block
          line-height: 1.125rem
          vertical-align: top
          font-size: .75rem
          color: rgb(7, 17, 27)
        .delivery
          display: inline-block
          margin-left: .75rem
          line-height: 1.125rem
          vertical-align: top
          font-size: .75rem
          color: $color-gray
  .rating-wrapper
    padding: 0 1.125rem
    .rating-item
      display: flex
      padding: 1.125rem 0
      border-1px($color-gray-s, bottom)
      .avatar
        flex: 0 0 1.75rem
        margin-right: .75rem
        width: 1.75rem
        img
          border-radius: 50%
      .content
        flex: 1
        position: relative
        .name
          margin-bottom: .25rem
          line-height: .75rem
          font-weight: 700
          font-size: .625rem
          color: $color-black
        .star-wrapper
          margin-bottom: .375rem
          font-size: 0
          .star
            display: inline-block
            margin-right: 1rem
            vertical-align: top
          .delivery
            display: inline-block
            line-height: .75rem
            vertical-align: top
            font-size: .625rem
            color: $color-gray
        .text
          margin-bottom: .5rem
          line-height: 1.125rem
          font-size: .75rem
          color: $color-black
        .recommend
          line-height: 1rem
          font-size: 0
          .icon-thumb_up,
          .item
            display: inline-block
            margin: 0 .5rem .25rem 0
            font-size: .5625rem
          .icon-thumb_up
            color: $color-blue
          .item
            padding: 0 .375rem
            border: .0625rem solid $color-gray
            color: $color-gray
            background: $color-white
        .time
          position: absolute
          top: 0
          right: 0
          line-height: .75rem
          font-size .5rem
          color: $color-gray