.my
  .header
    display: flex
    flex: 1
    flex-direction: column
    justify-content: center
    align-items: center
    width: 100%
    height: 10rem
    background-image: url("img/header.png")
    background-size: cover
    overflow: hidden
  .icon
    width: 5rem
    height: 5rem
    background-size: cover
    background-image: url("img/usericon.png")
  .nickname
    margin-top: .9375rem
    text-align: center
    font-size: 1rem
    color: #333
  .content
    min-height: 31.6875rem
    background-color: #eee
  .items
    background-color: #fff
    position relative
    &:after
      display: block
      position: absolute
      right: 0
      bottom: 0
      width: 96%
      border-top: .0625rem solid #eee
      content: ''
    li
      position: relative
      padding-left: 1.625rem
      margin-left: .9375rem
      border-bottom: .0625rem solid #e4e4e4
      height: 2.8125rem
      line-height: 2.8125rem
      font-size: .875rem
      &:last-child
        border: none
      &:before
        content: ''
        display: block
        position: absolute
        top: 50%
        left: .0625rem
        width: 1rem
        height: 1rem
        transform: translateY(-50%)
        -webkit-transform: translateY(-50%)
        background-size: cover
      &:after
        content: '>'
        display: block
        position: absolute
        right: .5625rem
        top: 0
        width: 1rem
        height: 1rem
        color: #aaa
    .address
      &:before
        background-image: url("./img/address.png")
    .money
      &:before
        background-image: url("./img/money.png")
    .email
      &:before
        background-image: url("./img/email.png")
    .question
      &:before
        background-image: url("./img/question.png")
    .login
      color #333
    .register
      color #333
  .tel
    position: relative
    top: 11.2rem
    height: 2.875rem
    line-height: 2.875rem
    text-align: center
    font-size: .9375rem
    // color: #ffb000
    background-color: #fff
  .time
    margin-top: .8125rem
    text-align: center
    font-size: .875rem
    color: #999